<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wild_Atlas.Views.SpeciesCheckResult"
             Title="SpeciesCheckResult">
    
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Département sélectionné :" 
               FontAttributes="Bold" />
        <Label Text="{Binding FormData.Departement.Nom}" />

        <Label Text="GADM ID :" 
               FontAttributes="Bold" />
        <Label Text="{Binding FormData.Departement.GadmId}" />

        <Label Text="Période :" 
               FontAttributes="Bold" />
        <Label Text="{Binding FormData.StartYear}" />
        <Label Text="{Binding FormData.EndYear}" />
    </VerticalStackLayout>
    
</ContentPage>